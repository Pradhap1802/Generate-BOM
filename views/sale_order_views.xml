<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit_pd_dynamic_bom" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.pd.dynamic.bom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="custom_product_creation_setting" invisible="1"/>
                <field name="allow_custom_product_on_so"
                       invisible="not custom_product_creation_setting"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='name']" position="after">
                <field name="length_in_inches" column_invisible="not parent.allow_custom_product_on_so"/>
                <field name="width_in_inches" column_invisible="not parent.allow_custom_product_on_so"/>
            </xpath>
        </field>
    </record>

</odoo>