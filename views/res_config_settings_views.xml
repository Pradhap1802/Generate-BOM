<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_pd_dynamic_bom" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pd.dynamic.bom</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Dynamic BOM" string="Dynamic BOM" data-key="pd_dynamic_bom">
                    <h2>Custom Product and BOM Creation</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="custom_product_creation"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="custom_product_creation"/>
                                <div class="text-muted">
                                    Allow creation of custom products.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
