<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view_inherit_pd_dynamic_bom" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit.dynamic.bom</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_custom_bom" string="Custom BOM"/>
            </xpath>

            <xpath expr="//field[@name='bom_line_ids']/list/field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.is_custom_bom', '=', True)]}</attribute>
            </xpath>


            <xpath expr="//field[@name='bom_line_ids']/list/field[@name='product_qty']" position="after">
                <field name="apply_formula" column_invisible="parent.is_custom_bom == False"/>
                <field name="length_deduction" column_invisible="parent.is_custom_bom == False" attrs="{'invisible': [('apply_formula', '=', False)]}"/>
                <field name="width_deduction"  column_invisible="parent.is_custom_bom == False" attrs="{'invisible': [('apply_formula', '=', False)]}"/>
            </xpath>
        

        </field>
    </record>
</odoo>